<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean	id="voldemortParent" abstract="true">
		<property name="bootStrapUrl" value="tcp://localhost:6666" />
	</bean>
	
	<bean 	id="configDAO"
			class="per.search.persistence.impl.voldemort.ConfigDAOImpl"
			parent="voldemortParent" />
	
	<bean 	id="productsDAO"
			class="per.search.persistence.impl.voldemort.ProductsDAOImpl" 
			parent="voldemortParent" />
	
	<bean 	id="synchronizeHistoryDAO"
			class="per.search.persistence.impl.voldemort.SynchronizeHistoryDAOImpl" 
			parent="voldemortParent" />
		
</beans>
